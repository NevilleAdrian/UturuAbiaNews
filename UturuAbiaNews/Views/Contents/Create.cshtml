				</div>
				<div class="form-group">
					<label asp-for="VideoUrl" class="control-label"></label>
					<input asp-for="VideoUrl" class="form-control" />
					<span asp-validation-for="VideoUrl" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Url" class="control-label"></label>
					<input name="Url" class="form-control valid" id="Url" aria-invalid="false" type="file">
					<span asp-validation-for="Url" class="text-danger"></span>
				</div>

				
				<div class="checkbox">
					<label>
						<input asp-for="IsHeadline" /> @Html.DisplayNameFor(model => model.IsHeadline)
					</label>
				</div>
				

				<div class="form-group">
					<div class="checkbox">
						<label>
							<input asp-for="IsEdited" /> @Html.DisplayNameFor(model => model.IsEdited)
						</label>
					</div>
				</div>
